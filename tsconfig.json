{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "outDir": "./build",
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "demo", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
